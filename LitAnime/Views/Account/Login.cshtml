@model LoginViewModel

<div class="login_form">
    <h1>Вход в личый кабинет</h1>

    @{
        if (ViewBag.returnUrl == null)
            ViewBag.returnUrl = "/Home/Index";
    }
    <div>
        <form asp-area="" asp-controller="Account" asp-action="Login" method="post" asp-route-returnUrl="@ViewBag.returnUrl">
            <div class="block">
                <label asp-for=@Model.UserName></label>
                <div class="jsection">
                    <input asp-for=@Model.UserName />
                    <span asp-validation-for=@Model.UserName></span>
                </div>
            </div>
            <div class="block">
                <label asp-for=@Model.Password></label>
                <div class="jsection">
                    <input asp-for=@Model.Password />
                    <span asp-validation-for=@Model.Password></span>
                </div>
            </div>
            <div class="block">
                <label asp-for=@Model.RememberMe></label>
                <input asp-for=@Model.RememberMe />
                <span asp-validation-for=@Model.RememberMe></span>
            </div>

            <ul class="hr">
                <li><input class="input btn" type="submit" value="Войти" /></li>
                <li><input asp-area="" asp-controller="Account" asp-action="Register" class="input btn" type="submit" value="Registration"></li>
            </ul>

        </form>
    </div>

</div>


